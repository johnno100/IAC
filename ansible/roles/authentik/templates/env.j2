# Path: ansible/roles/authentik/templates/env.j2
---
# PostgreSQL Configuration
POSTGRES_USER={{ authentik_db_user }}
POSTGRES_PASSWORD={{ authentik_postgresql_password }}
POSTGRES_DB={{ authentik_db_name }}
POSTGRES_HOST={{ authentik_db_host }}

# Authentik Configuration
AUTHENTIK_REDIS__HOST=redis
AUTHENTIK_POSTGRESQL__HOST={{ authentik_db_host }}
AUTHENTIK_POSTGRESQL__USER={{ authentik_db_user }}
AUTHENTIK_POSTGRESQL__NAME={{ authentik_db_name }}
AUTHENTIK_POSTGRESQL__PASSWORD={{ authentik_postgresql_password }}
AUTHENTIK_SECRET_KEY={{ authentik_secret_key }}
AUTHENTIK_ERROR_REPORTING__ENABLED={{ authentik_error_reporting_enabled | lower }}
AUTHENTIK_PORT={{ authentik_port }}
AUTHENTIK_ADMIN_TOKEN={{ authentik_admin_token }}
AUTHENTIK_BOOTSTRAP_EMAIL={{ authentik_admin_email }}
AUTHENTIK_BOOTSTRAP_PASSWORD={{ authentik_admin_password }}

