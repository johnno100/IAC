# ansible/templates/proxmox-repos.list.j2
# Proxmox VE repository configuration
# Generated by Ansible

{% if proxmox_enterprise_repo | default(false) %}
# Enterprise repository (requires subscription)
deb https://enterprise.proxmox.com/debian/pve bullseye pve-enterprise
{% else %}
# Community repository (no subscription required)
deb http://download.proxmox.com/debian/pve bullseye pve-no-subscription
{% endif %}

# Proxmox Ceph repository
deb http://download.proxmox.com/debian/ceph-pacific bullseye main

# Proxmox backup server repository
deb http://download.proxmox.com/debian/pbs bullseye main