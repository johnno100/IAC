# ansible/templates/sshd_config.j2
# SSH Server Configuration
# Generated by Ansible on {{ ansible_date_time.date }}
# Security-hardened configuration for Proxmox hosts

# Basic settings
Port 22
AddressFamily inet
Protocol 2
HostKey /etc/ssh/ssh_host_rsa_key
HostKey /etc/ssh/ssh_host_ecdsa_key
HostKey /etc/ssh/ssh_host_ed25519_key

# Cryptography settings
KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-sha2-512,hmac-sha2-256

# Logging
SyslogFacility AUTH
LogLevel VERBOSE

# Authentication
LoginGraceTime 30
PermitRootLogin {% if ssh_permit_root_login | default(false) %}yes{% else %}prohibit-password{% endif %}
StrictModes yes
MaxAuthTries 3
MaxSessions 5
PubkeyAuthentication yes
AuthorizedKeysFile .ssh/authorized_keys

# Only allow SSH key authentication if specified
PasswordAuthentication {% if ssh_password_authentication | default(true) %}yes{% else %}no{% endif %}
PermitEmptyPasswords no
ChallengeResponseAuthentication no
UsePAM yes

# Forwarding / Tunneling
AllowAgentForwarding no
AllowTcpForwarding {% if ssh_tcp_forwarding | default(false) %}yes{% else %}no{% endif %}
GatewayPorts no
X11Forwarding no
PermitTunnel no

# Features
PrintMotd no
PrintLastLog yes
TCPKeepAlive yes
UseDNS no
Compression delayed

# SFTP configuration
Subsystem sftp /usr/lib/openssh/sftp-server

# Allow only specific users/groups if defined
{% if ssh_allow_users is defined and ssh_allow_users %}
AllowUsers {{ ssh_allow_users | join(' ') }}
{% endif %}

{% if ssh_allow_groups is defined and ssh_allow_groups %}
AllowGroups {{ ssh_allow_groups | join(' ') }}
{% endif %}

# HIPAA/GDPR compliance settings
ClientAliveInterval 300
ClientAliveCountMax 2